  mixin share-tw(shareLink, shareTitle, shareSiteName)
    a.article-share__link.article-share__link--tw(href='https://twitter.com/share?url=' +
    'http://notary-office.kiev.ua/' + shareLink + '&amp;text=' + shareTitle + '&amp;"', target='_blank') 
      svg
        use(xlink:href="assets/img/sprite.svg#twitter")

  mixin share-in(shareLink, shareTitle, shareSiteName)
